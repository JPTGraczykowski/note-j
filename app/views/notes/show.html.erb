<% content_for :title, @note.title %>

<div class="max-w-4xl mx-auto px-6 py-8">
  <!-- Header -->
  <div class="mb-6">
    <nav class="flex items-center space-x-2 text-sm text-neutral-600 mb-2">
      <%= link_to "Notes", notes_path, class: "hover:text-neutral-900" %>
      <%= render "shared/svg/right_arrow" %>
      <span class="text-neutral-900 font-medium"><%= @note.title %></span>
    </nav>
    <%= render "shared/page_title", page_title: @note.title %>

    <!-- Actions -->
    <div class="flex items-center space-x-3 mt-4">
      <%= link_to edit_note_path(@note),
          class: "inline-flex items-center px-4 py-2 text-sm font-medium text-neutral-700 bg-white border border-neutral-300 rounded-md hover:bg-neutral-50 hover:cursor-pointer transition-colors" do %>
        <%= render "shared/svg/edit" %>
        Edit Note
      <% end %>

      <%= button_to note_path(@note), method: :delete,
          data: { confirm: "Are you sure you want to delete this note?" },
          class: "inline-flex items-center px-4 py-2 text-sm font-medium text-error-700 bg-white border border-error-300 rounded-md hover:bg-error-50 hover:cursor-pointer transition-colors" do %>
        <%= render "shared/svg/trash" %>
        Delete Note
      <% end %>
    </div>
  </div>

  <!-- Note Content -->
  <div class="bg-white rounded-lg shadow-sm border border-neutral-200 p-6">
    <!-- Meta Information -->
    <div class="flex items-center justify-between text-sm text-neutral-600 mb-6 pb-4 border-b border-neutral-200">
      <div class="flex items-center space-x-4">
        <span>
          <strong>Folder:</strong> <%= @note.folder_name %>
        </span>
        <span>
          <strong>Created:</strong> <%= @note.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </span>
        <% if @note.updated_at != @note.created_at %>
          <span>
            <strong>Updated:</strong> <%= @note.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
          </span>
        <% end %>
      </div>
    </div>

    <!-- Tags -->
    <% if @note.tags.any? %>
      <div class="mb-6">
        <div class="flex flex-wrap gap-2">
          <% @note.tags.each do |tag| %>
            <%= link_to notes_path(tag: tag.name),
                class: "inline-flex items-center px-3 py-1 text-xs font-medium bg-primary-100 text-primary-800 rounded-full hover:bg-primary-200 transition-colors" do %>
              <%= render "shared/svg/tag" %>
              <%= tag.name %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Images -->
    <% if @note.has_images? %>
      <div class="mb-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @note.images.each do |image| %>
            <%= image_tag image %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Content -->
    <div class="prose prose-neutral max-w-none">
      <% if @note.content.present? %>
        <%= simple_format(@note.content) %>
      <% else %>
        <p class="text-neutral-500 italic">No content yet.</p>
      <% end %>
    </div>
  </div>
</div>
