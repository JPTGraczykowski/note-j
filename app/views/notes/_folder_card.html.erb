<div class="bg-white border border-neutral-200 rounded-lg shadow-sm hover:shadow-md transition-shadow">
  <%= link_to notes_path(folder_id: folder.id), class: "block p-3" do %>
    <!-- Folder Icon and Name -->
    <div class="flex items-center gap-3 mb-2">
      <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
        <div class="text-primary-700 scale-125">
          <%= render "shared/svg/folder" %>
        </div>
      </div>
      <h3 class="text-sm font-semibold text-neutral-900 line-clamp-2 flex-1">
        <%= folder.name %>
      </h3>
    </div>

    <!-- Meta Information -->
    <div class="flex items-center space-x-3 text-xs text-neutral-600">
      <!-- Subfolders Count -->
      <% if folder.has_children? %>
        <div class="flex items-center">
          <%= render "shared/svg/folder" %>
          <span><%= pluralize(folder.children_count, 'subfolder') %></span>
        </div>
      <% end %>

      <!-- Notes Count -->
      <div class="flex items-center">
        <%= render "shared/svg/note" %>
        <span><%= pluralize(folder.notes_count, 'note') %></span>
      </div>
    </div>
  <% end %>
</div>
