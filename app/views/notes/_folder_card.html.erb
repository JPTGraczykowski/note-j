<div class="bg-white border border-neutral-200 rounded-lg shadow-sm hover:shadow-md transition-shadow">
  <%= link_to notes_path(folder_id: folder.id), class: "block p-6" do %>
    <!-- Folder Icon -->
    <div class="mb-4">
      <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
        <div class="text-primary-700 scale-150">
          <%= render "shared/svg/folder" %>
        </div>
      </div>
    </div>

    <!-- Folder Name -->
    <h3 class="text-lg font-semibold text-neutral-900 mb-2 line-clamp-2">
      <%= folder.name %>
    </h3>

    <!-- Meta Information -->
    <div class="flex items-center space-x-4 text-sm text-neutral-600">
      <!-- Subfolders Count -->
      <% if folder.has_children? %>
        <div class="flex items-center">
          <%= render "shared/svg/folder" %>
          <span><%= pluralize(folder.children.count, 'subfolder') %></span>
        </div>
      <% end %>

      <!-- Notes Count -->
      <div class="flex items-center">
        <%= render "shared/svg/note" %>
        <span><%= pluralize(folder.notes.count, 'note') %></span>
      </div>
    </div>
  <% end %>
</div>
