<div class="bg-white border border-neutral-200 rounded-lg shadow-sm hover:shadow-md transition-shadow">
  <%= link_to note_path(note), class: "block p-6" do %>
    <!-- Note Title -->
    <h3 class="text-lg font-semibold text-neutral-900 mb-2 line-clamp-2">
      <%= note.title %>
    </h3>

    <!-- Note Content Preview -->
    <% if note.content.present? %>
      <p class="text-neutral-600 text-sm mb-4 line-clamp-3">
        <%= truncate(strip_tags(note.content), length: 150) %>
      </p>
    <% else %>
      <p class="text-neutral-400 text-sm mb-4 italic">No content</p>
    <% end %>

    <!-- Images Preview -->
    <% if note.has_images? %>
      <div class="flex space-x-2 mb-4">
        <% note.images.limit(3).each do |image| %>
          <div class="w-12 h-12 bg-neutral-100 rounded-md overflow-hidden">
            <%= image_tag image, class: "w-full h-full object-cover" %>
          </div>
        <% end %>
        <% if note.images.count > 3 %>
          <div class="w-12 h-12 bg-neutral-100 rounded-md flex items-center justify-center">
            <span class="text-xs text-neutral-600 font-medium">+<%= note.images.count - 3 %></span>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Meta Information -->
    <div class="flex items-center justify-between text-xs text-neutral-500">
      <!-- Folder -->
      <div class="flex items-center space-x-4">
        <div class="flex items-center">
          <%= render "shared/svg/folder" %>
          <span><%= note.folder_name %></span>
        </div>

        <!-- Tags -->
        <% if note.tags.any? %>
          <div class="flex items-center">
            <%= render "shared/svg/tag" %>
            <span><%= note.tags.limit(2).pluck(:name).join(', ') %></span>
            <% if note.tags_count > 2 %>
              <span class="ml-1">+<%= note.tags_count - 2 %></span>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Date -->
      <div class="flex items-center">
        <%= render "shared/svg/clock" %>
        <time datetime="<%= note.updated_at.iso8601 %>">
          <%= time_ago_in_words(note.updated_at) %> ago
        </time>
      </div>
    </div>
  <% end %>

  <!-- Action Bar -->
  <div class="border-t border-neutral-100 px-6 py-3">
    <div class="flex items-center justify-between">
      <!-- Tags (expanded view) -->
      <div class="flex flex-wrap gap-1">
        <% note.tags.limit(3).each do |tag| %>
          <%= link_to notes_path(tag: tag.name),
              class: "inline-flex items-center px-2 py-1 text-xs font-medium bg-neutral-100 text-neutral-700 rounded-md hover:bg-neutral-200 transition-colors",
              onclick: "event.stopPropagation();" do %>
            <%= tag.name %>
          <% end %>
        <% end %>
        <% if note.tags_count > 3 %>
          <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-neutral-100 text-neutral-500 rounded-md">
            +<%= note.tags_count - 3 %> more
          </span>
        <% end %>
      </div>

      <!-- Actions -->
      <div class="flex items-center space-x-2">
        <%= link_to edit_note_path(note),
            class: "inline-flex items-center p-1.5 text-neutral-400 hover:text-neutral-600 transition-colors",
            onclick: "event.stopPropagation();",
            title: "Edit note" do %>
          <%= render "shared/svg/edit" %>
        <% end %>

        <%= link_to note_path(note),
            method: :delete,
            class: "inline-flex items-center p-1.5 text-neutral-400 hover:text-error-600 transition-colors",
            onclick: "event.stopPropagation();",
            title: "Delete note",
            data: {
              confirm: "Are you sure you want to delete this note?",
              turbo_method: :delete
            } do %>
          <%= render "shared/svg/trash" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

