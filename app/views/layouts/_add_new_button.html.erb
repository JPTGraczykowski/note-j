<div class="relative" data-controller="dropdown">
  <button type="button" class="flex items-center space-x-1 px-3 py-2 bg-primary-700 text-white rounded-md hover:bg-primary-800 transition-colors hover:cursor-pointer" data-action="click->dropdown#toggle">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    <span class="text-sm font-medium">New</span>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 9-7 7-7-7"/>
    </svg>
  </button>

  <!-- Dropdown Menu -->
  <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border border-neutral-200 hidden" data-dropdown-target="menu">
    <%= link_to new_note_path, class: "flex items-center px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-100" do %>
      <svg class="w-4 h-4 mr-3 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      New Note
    <% end %>
    <%= link_to "#", class: "flex items-center px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-100" do %>
      <svg class="w-4 h-4 mr-3 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
      </svg>
      New Todo
    <% end %>
    <%= link_to new_folder_path, data: { turbo_frame: "modal" }, class: "flex items-center px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-100" do %>
      <svg class="w-4 h-4 mr-3 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
      </svg>
      New Folder
    <% end %>
    <%= link_to new_tag_path, data: { turbo_frame: "modal" }, class: "flex items-center px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-100" do %>
      <svg class="w-4 h-4 mr-3 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
      </svg>
      New Tag
    <% end %>
  </div>
</div>
