<div class="relative" data-controller="dropdown">
  <button type="button" class="flex items-center space-x-1 px-3 py-2 bg-primary-700 text-white rounded-md hover:bg-primary-800 transition-colors hover:cursor-pointer" data-action="click->dropdown#toggle">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    <span class="text-sm font-medium">New</span>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 9-7 7-7-7"/>
    </svg>
  </button>

  <!-- Dropdown Menu -->
  <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border border-neutral-200 hidden" data-dropdown-target="menu">
    <%= link_to new_note_path, class: "flex items-center px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-100" do %>
      <%= render "shared/svg/note" %>
      New Note
    <% end %>
    <%= link_to "#", class: "flex items-center px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-100" do %>
      <%= render "shared/svg/todo" %>
      New Todo
    <% end %>
    <%= link_to new_folder_path, data: { turbo_frame: "modal" }, class: "flex items-center px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-100" do %>
      <%= render "shared/svg/folder" %>
      New Folder
    <% end %>
    <%= link_to new_tag_path, data: { turbo_frame: "modal" }, class: "flex items-center px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-100" do %>
      <%= render "shared/svg/tag" %>
      New Tag
    <% end %>
  </div>
</div>
