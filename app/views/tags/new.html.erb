<%= turbo_frame_tag "modal" do %>
  <%= render "shared/modal", modal_id: "new_tag_modal", title: "Create New Tag" do %>
    <div data-controller="tag-editor">
      <%= form_with model: @tag, class: "flex flex-col gap-4" do |f| %>
        <div>
          <%= f.label :name, "Tag Name", class: "block text-sm font-medium text-neutral-700 mb-2" %>
          <%= f.text_field :name,
              placeholder: "Enter tag name...",
              class: "w-full px-3 py-2 text-sm border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent",
              data: { tag_editor_target: "input", action: "keydown.esc->tag-editor#cancelModal" },
              autofocus: true %>
        </div>

        <div class="flex items-center gap-2 justify-end">
          <button type="button"
                  data-action="click->modal#close"
                  class="px-4 py-2 text-sm text-neutral-600 hover:text-neutral-900 transition-colors hover:cursor-pointer">
            Cancel
          </button>
          <%= f.submit "Create Tag",
              class: "px-4 py-2 text-sm bg-primary-600 text-white rounded-md hover:bg-primary-700 transition-colors hover:cursor-pointer" %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
