<%# Close the modal and reset the turbo frame %>
<%= turbo_stream.replace "modal" do %>
  <%= turbo_frame_tag "modal" %>
<% end %>

<%# Remove the "no tags" message if it exists %>
<%= turbo_stream.remove "no_tags_message" %>

<%# Add the new tag to the list %>
<% if @next_tag %>
  <%= turbo_stream.before dom_id(@next_tag) do %>
    <%= render "layouts/sidebar_tag_item", tag: @tag %>
  <% end %>
<% else %>
  <%= turbo_stream.append "tags_list" do %>
    <%= render "layouts/sidebar_tag_item", tag: @tag %>
  <% end %>
<% end %>
