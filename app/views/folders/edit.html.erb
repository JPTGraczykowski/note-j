<%= turbo_frame_tag dom_id(@folder) do %>
  <div class="flex items-center px-3 py-2" data-controller="folder-editor">
    <%= form_with model: @folder, data: { turbo_frame: dom_id(@folder) }, class: "flex items-center flex-1 gap-2" do |f| %>
      <div class="flex-1">
        <%= f.text_field :name,
            class: "w-full px-2 py-1 text-sm border border-neutral-300 rounded focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent",
            data: { folder_editor_target: "input", action: "keydown.esc->folder-editor#cancelByEscape" },
            autofocus: true %>
      </div>

      <div class="flex items-center gap-1">
        <%= f.submit "Save",
            class: "px-2 py-1 text-xs bg-primary-600 text-white rounded hover:bg-primary-700 transition-colors" %>
        <%= link_to "Cancel",
            folder_path(@folder),
            data: { turbo_frame: dom_id(@folder) },
            class: "px-2 py-1 text-xs text-neutral-600 hover:text-neutral-900 transition-colors" %>
      </div>
    <% end %>
  </div>
<% end %>
