<div class="bg-white border border-neutral-200 rounded-lg shadow-sm hover:shadow-md transition-shadow">
  <%= link_to todo_list_path(todo_list), class: "block p-6" do %>
    <!-- Status Badge -->
    <div class="mb-3">
      <% if todo_list.completed? %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
          Completed
        </span>
      <% else %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
          In Progress
        </span>
      <% end %>
    </div>

    <!-- Todo List Title -->
    <h3 class="text-lg font-semibold text-neutral-900 mb-3 line-clamp-2">
      <%= todo_list.title %>
    </h3>

    <!-- Progress Bar -->
    <% if todo_list.todos.any? %>
      <div class="mb-4">
        <div class="flex items-center justify-between text-xs text-neutral-600 mb-1">
          <span><%= todo_list.completed_todos_count %> of <%= todo_list.todos.count %> completed</span>
          <span><%= todo_list.progress_percentage %>%</span>
        </div>
        <div class="w-full bg-neutral-200 rounded-full h-2">
          <div class="bg-primary-700 h-2 rounded-full transition-all" style="width: <%= todo_list.progress_percentage %>%"></div>
        </div>
      </div>
    <% else %>
      <p class="text-neutral-400 text-sm mb-4 italic">No todos yet</p>
    <% end %>

    <!-- Meta Information -->
    <div class="flex items-center justify-between text-xs text-neutral-500">
      <!-- Item Count -->
      <div class="flex items-center">
        <%= render "shared/svg/todo" %>
        <span><%= pluralize(todo_list.todos.count, 'item') %></span>
      </div>

      <!-- Date -->
      <div class="flex items-center">
        <%= render "shared/svg/clock" %>
        <time datetime="<%= todo_list.updated_at.iso8601 %>">
          <%= time_ago_in_words(todo_list.updated_at) %> ago
        </time>
      </div>
    </div>
  <% end %>

  <!-- Action Bar -->
  <div class="border-t border-neutral-100 px-6 py-3">
    <div class="flex items-center justify-between">
      <!-- Quick Stats -->
      <div class="flex items-center space-x-3 text-xs text-neutral-600">
        <% if todo_list.todos.any? %>
          <span><%= todo_list.pending_todos_count %> pending</span>
        <% end %>
      </div>

      <!-- Actions -->
      <div class="flex items-center space-x-2">
        <%= link_to edit_todo_list_path(todo_list),
            class: "inline-flex items-center p-1.5 text-neutral-400 hover:text-neutral-600 transition-colors",
            onclick: "event.stopPropagation();",
            title: "Edit todo" do %>
          <%= render "shared/svg/edit" %>
        <% end %>

        <%= link_to todo_list_path(todo_list),
            method: :delete,
            class: "inline-flex items-center p-1.5 text-neutral-400 hover:text-error-600 transition-colors",
            onclick: "event.stopPropagation();",
            title: "Delete todo",
            data: {
              confirm: "Are you sure you want to delete this todo?",
              turbo_method: :delete
            } do %>
          <%= render "shared/svg/trash" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
