  <!-- Header -->
  <div class="mb-6">
    <nav class="flex items-center space-x-2 text-sm text-neutral-600 mb-2">
      <%= link_to "Todos", todo_lists_path, class: "hover:text-neutral-900" %>
      <%= render "shared/svg/right_arrow" %>
      <span class="text-neutral-900 font-medium">New Todo</span>
    </nav>
    <%= render "shared/page_title", page_title: "Create new todo" %>
  </div>

  <!-- Todo Form -->
  <%= render 'form', todo_list: @todo_list %>
</div>
