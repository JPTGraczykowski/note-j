<div data-controller="flash"
      data-flash-duration-value="5000"
      class="flash-message bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg shadow-lg max-w-sm"
      role="alert">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <%= alert %>
    </div>
    <button data-action="click->flash#close"
            class="flex-shrink-0 ml-2 text-red-600 hover:text-red-800 hover:cursor-pointer transition-colors">
      <%= render "shared/svg/close_cross" %>
    </button>
  </div>
</div>
