<div class="flex items-start space-x-3 p-3 rounded-lg border border-neutral-200 hover:bg-neutral-50 transition-colors">
  <!-- Checkbox -->
  <div class="flex-shrink-0 pt-0.5">
    <%= form_with url: toggle_todo_path(todo), method: :post, class: "inline-block" do |form| %>
      <%= check_box_tag "completed",
          "1",
          todo.completed?,
          onchange: "this.form.requestSubmit()",
          class: "h-5 w-5 rounded border-neutral-300 text-primary-700 focus:ring-primary-500 cursor-pointer" %>
    <% end %>
  </div>

  <!-- Todo Content -->
  <div class="flex-1 min-w-0">
    <p class="text-sm <%= 'line-through text-neutral-500' if todo.completed? %> <%= 'text-neutral-900' unless todo.completed? %>">
      <%= todo.description %>
    </p>
    <div class="flex items-center mt-1 text-xs text-neutral-500">
      <%= render "shared/svg/clock" %>
      <time datetime="<%= todo.updated_at.iso8601 %>">
        <%= time_ago_in_words(todo.updated_at) %> ago
      </time>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex items-center space-x-1 flex-shrink-0">
    <%= link_to edit_todo_path(todo),
        class: "inline-flex items-center p-1.5 text-neutral-400 hover:text-neutral-600 transition-colors",
        title: "Edit item" do %>
      <%= render "shared/svg/edit" %>
    <% end %>

    <%= button_to todo_path(todo),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this item?" },
        class: "inline-flex items-center p-1.5 text-neutral-400 hover:text-error-600 transition-colors",
        title: "Delete item" do %>
      <%= render "shared/svg/trash" %>
    <% end %>
  </div>
</div>
